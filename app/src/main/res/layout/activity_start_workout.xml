<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.fitalways.StartWorkoutActivity">


    <TextView
        android:id="@+id/workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Classic Workout"
        android:textColor="#000"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_start_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/go_to_workout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workout_name"
        android:layout_marginTop="65dp"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/go_to_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#4CAF50"
        android:text="GO To Workout" />

    <TextView
        android:id="@+id/workout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workout_name"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/calorie_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/workout_time"
        android:layout_alignBottom="@+id/workout_time"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_toEndOf="@+id/workout_time"
        android:layout_toRightOf="@+id/workout_time"
        android:text="TextView" />

</RelativeLayout>
